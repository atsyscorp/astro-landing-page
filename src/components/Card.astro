---
interface Props {
    title? : string
    viewMore? : string
    image? : string
    preffix? : string
    url? : string
}

const { title = 'Default title', viewMore = 'View more', image = '', preffix = '', url = '' } = Astro.props
---

<div class="card">
    <img src={image} alt="" />
    <h4>{title}</h4>
    <a href={`${preffix}${url}`}>{viewMore}</a>
</div>

<style>
    .card{
        border-radius:5px;
        padding:20px;
        width:300px;
        margin-bottom: 5px;
        color: #FFFFF;
        text-align:center;
    }
    .card h4{
        color:#FFFFFF;
    }
    .card p{
        color:#FFFFFF;
    }
    .card > a{
        color:#FFFFFF;
    }
</style>