---
import {projects} from '../../config/projects.json'
---
<div class="mx-auto">

    <h2 class="font-bold text-5xl text-center my-8">Projects</h2>
    <section>
        {
            projects.map(project => (
                <div class="flex flex-col md:flex-row gap-4">
                    <div class="flex-1 p-4">
                        <h3 class="font-bold text-2xl my-4">{project.title}</h3>
                        <p class="my-2">{project.description}</p>
                        <button class="bg-indigo-500 px-2 py-2 hover:bg-slate-400">
                            More info
                        </button>
                    </div>
                    <div>
                        <img src={project.image} alt="" class="w-72 m-auto" />
                    </div>
                </div>
            ))
        }
    </section>
</div>